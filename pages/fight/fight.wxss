Page{
  font-family: kaiti;
}
.header {
  
  display: flex;
  align-items: center;
  justify-content: left;
  border-bottom: 1rpx solid #ccc;
  border-left: 1rpx solid #ccc;
  border-right: 1rpx solid #ccc;
  border-radius: 20rpx;
  box-shadow: 0px 2rpx #e2e2e2;
  z-index: 999;
  position: relative;
  padding-bottom: 5rpx;
}
.header .avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 2rpx solid #2DC799;
}
.clock{

  width: 32px;
  height: 32px;
  position: absolute;
  right: 50rpx;
top: 30rpx;
}


.text {
 position: absolute;
 top: 40rpx;
 left: 180rpx;
  font-size: 30rpx;
  font-family: songti;
  font-weight: bold;
}
.count{
  position: absolute;
 top: 100rpx;
 right:55rpx;
 font-size: 30rpx;

}
/*题目  */
.center{
  width: 95%;
  height: 600rpx;
 
  margin: 40rpx auto;
  
}
.question{
display: flex;
justify-content: center;
font-weight: bold;
}
.choose{
display: flex;
align-items: center;
justify-content: center;
flex-direction: column;

}

.choose text{
  margin-top: 30rpx;
  background: #2DC799;
  width: 300rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #ffffff;
  border-radius: 5%;
  font-weight: bold;
}
.arrow{
  display: flex;
align-items: center;
justify-content: center;
margin-top: 60rpx;
}
.left{

  width: 32px;
  height: 32px;
  margin-right: 100rpx;

}
.next{
   width: 32px;
  height: 32px;
}
.tools{
  width: 95%;
  height: 100px;
 
  display: flex;
  align-items: center;
justify-content: center;
}
.tools image{
  width: 32px;
  height: 32px;
 
  margin-left: 30rpx;
}