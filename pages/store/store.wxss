/* pages/store/store.wxss */
/* tap */
.tab {
  float: left;
  width: 50%;
  text-align: center;
  padding: 10rpx 0;
}
.topTabSwiper {
  margin-top: 50rpx;
  border-bottom: 1px solid #ccc;
  zoom: 1;
}
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
.tabBorer {
  border-bottom: 1px solid #2DC799;
  color: #2DC799;
}
.swiper {
  width: 100%;
  height:100%;
}
.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
  padding: 40rpx 0;
  
}
/* 页面 */
page{
  height: 100%;
  box-sizing: border-box;
  padding: 35rpx;
}
.box{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
  background-color: rgb(242,229,158);
  box-sizing: border-box;
  padding-top:50rpx;
  border-radius: 20rpx;
}
/* 标题 */
.title{
  margin: 0 auto;
  font-size: 46rpx;
  font-weight: bold;
}
/* 药材 */
.search_input{
  width: 90%;
  margin: 0 auto;
  border-radius: 8rpx;
  background-color: white;
  opacity: 0.5;
  text-align: left;
}
.drug_pics{
  margin: 50rpx 30rpx;
  display: flex;
}
.drug_pic_item{
  display: flex;
  flex-direction: column;
  margin-right: 30rpx; 
}
.drug_pic_name{
  width: 150rpx;
  margin-top: 5rpx;
  border-radius: 8rpx;
  text-align: center;
  color: white;
  background-color:rgb(63,81,181); 
}
/* 道具 */
.item_pics{
  margin: 50rpx 30rpx;
  display: flex;
  justify-content: space-around;
}
.item_pic_item{
  display: flex;
  flex-direction: column;
}
.item_pic_info{
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  font-size: 26rpx;
}
.item_pic_name{
  margin-right:20rpx; 
}
.item_pic_sign{
  width: 30rpx;
  height: 30rpx;
}
/* 积分数 */
.info{
  position: absolute;
  left: 30rpx;
  bottom: 30rpx;
  display: flex;
  align-items:center;
}
.pic_credit{
  width: 50rpx;
  height: 50rpx;
}
.info_box{
  height: 60rpx;
  display:flex;
  align-items:center;
  margin-left: 20rpx;
  background-color: rgb(247,204,105);
  border-radius: 15rpx;
}
.info_number{
  font-size: 26rpx;
  margin-left: 50rpx;
  margin-right: 20rpx;
}